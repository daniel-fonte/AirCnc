{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "eslint-plugin-import-helpers"
    ],
    "rules": {
        "no-mixed-spaces-and-tabs": 0,
        "semi": [2, "always"],
        "quotes": [
            "error", "double", {
                "avoidEscape": true
            }
        ],
        "no-duplicate-imports": "error",
        "import-helpers/order-imports": [
            "warn",
            {
                "newlinesBetween": "always",
                "groups": [
                    "absolute",
                    "module",
                    "parent"
                ],
                "alphabetize": {
                    "order": "asc"
                }
            }
        ]
    }
}